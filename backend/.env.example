# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fantasy_draft
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/fantasy_draft

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# API Keys (for future use)
SPORTS_DATA_API_KEY=your_sports_api_key_here
STRIPE_SECRET_KEY=your_stripe_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Redis (for future use)
REDIS_URL=redis://localhost:6379

# Email (for future use)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Fantasy Draft <noreply@fantasydraft.com>

# Feature Flags
ENABLE_MARKET_MOVER=true
ENABLE_KINGPIN_BONUS=true
ENABLE_WEEKLY_BONUS=true